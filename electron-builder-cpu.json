{
  "appId": "com.shoptitans.guildtracker.cpu",
  "productName": "Shop Titans Guild Tracker CPU",
  "files": [
    "main.js",
    "preload.js",
    "index.html",
    "ocr_paddle.py",
    "requirements.txt",
    "setup-venv.bat",
    "venv/**/*",
    "src/**/*",
    "dist/**/*",
    "node_modules/**/*",
    "!node_modules/**/*.map",
    "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
    "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
    "!node_modules/**/*.d.ts"
  ],
  "asarUnpack": [
    "ocr_paddle.py",
    "requirements.txt",
    "setup-venv.bat",
    "venv/**/*"
  ],
  "directories": {
    "output": "release/cpu"
  },
  "win": {
    "target": [
      "nsis",
      "portable"
    ],
    "icon": "build/icon.ico",
    "sign": null,
    "verifyUpdateCodeSignature": false,
    "signAndEditExecutable": false
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "artifactName": "${productName} Setup ${version}.exe"
  },
  "portable": {
    "artifactName": "${productName}-${version}-portable.exe"
  }
}

