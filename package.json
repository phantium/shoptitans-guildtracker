{
  "name": "shop-titans-guild-tracker",
  "version": "1.0.0",
  "description": "Guild statistics tracker for Shop Titans game",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "build": "webpack --mode production",
    "dev": "webpack --mode development --watch",
    "pack": "electron-builder --dir",
    "dist": "electron-builder"
  },
  "keywords": [
    "electron",
    "shop-titans",
    "guild-tracker",
    "ocr"
  ],
  "author": "Phantium",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/phantium/shoptitans-guildtracker.git"
  },
  "homepage": "https://github.com/phantium/shoptitans-guildtracker#readme",
  "bugs": {
    "url": "https://github.com/phantium/shoptitans-guildtracker/issues"
  },
  "dependencies": {
    "better-sqlite3": "^9.2.2",
    "html-to-image": "^1.11.13",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "recharts": "^3.3.0",
    "tesseract.js": "^5.0.4"
  },
  "devDependencies": {
    "@babel/core": "^7.23.7",
    "@babel/preset-react": "^7.23.3",
    "babel-loader": "^9.1.3",
    "buffer": "^6.0.3",
    "copy-webpack-plugin": "^13.0.1",
    "css-loader": "^6.9.0",
    "electron": "^28.1.0",
    "electron-builder": "^24.9.1",
    "electron-rebuild": "^3.2.9",
    "process": "^0.11.10",
    "style-loader": "^3.3.4",
    "webpack": "^5.89.0",
    "webpack-cli": "^5.1.4"
  },
  "build": {
    "appId": "com.shoptitans.guildtracker",
    "productName": "Shop Titans Guild Tracker",
    "files": [
      "main.js",
      "preload.js",
      "index.html",
      "ocr_paddle.py",
      "requirements.txt",
      "venv/**/*",
      "src/**/*",
      "dist/**/*",
      "node_modules/**/*",
      "!node_modules/**/*.map",
      "!node_modules/*/{CHANGELOG.md,README.md,README,readme.md,readme}",
      "!node_modules/**/{test,__tests__,tests,powered-test,example,examples}",
      "!node_modules/**/*.d.ts"
    ],
    "asarUnpack": [
      "ocr_paddle.py",
      "requirements.txt",
      "venv/**/*"
    ],
    "directories": {
      "output": "build-output"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "sign": null,
      "verifyUpdateCodeSignature": false,
      "signAndEditExecutable": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    },
    "portable": {
      "artifactName": "${productName}-${version}-portable.exe"
    }
  }
}
